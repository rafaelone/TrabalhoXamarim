<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.LocalDB.View.Login">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Nome" Text="{Binding UsuarioModel.Login}"/>
            <Entry Placeholder="Senha" Text="{Binding UsuarioModel.Senha}"/>
            <Button Text="Entrar" Command="{Binding IsAutenticarCMD}" CommandParameter="{Binding UsuarioModel}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>